# ===========================================
# REQUIRED VARIABLES - YOU MUST FILL THESE OUT
# ===========================================

# Database Configuration (REQUIRED)
DB_PASS=your_postgres_password_here
DB_USER=postgres
DB_NAME=MLAgent_db

# Security Configuration (REQUIRED)
SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32
ALGORITHM=HS256

# API Keys (REQUIRED)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ===========================================
# OPTIONAL VARIABLES - HAVE DEFAULTS
# ===========================================

# JWT Token Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Frontend Configuration  
NEXT_PUBLIC_API_URL=http://localhost:8003

# Local Storage (for development/non-Docker usage)
LOCAL_STORAGE_PATH=/path/to/your/storage
LOG_DIR_PATH=/path/to/your/logs

# Logging Configuration (for development/non-Docker usage)
JSON_FORMAT=true
CONSOLE_LOG=false

# SQLite (alternative to PostgreSQL for development)
SQLITE_DB_PATH=/path/to/sqlite.db